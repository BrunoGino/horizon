<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="java.util.List" />

        <variable
            name="navController"
            type="androidx.navigation.NavController" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/security_filters_master_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/filters_interest_liquid3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/expiry_date"
                    android:textColor="@color/moccasin"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/filters_interest_gross"
                    app:layout_constraintTop_toBottomOf="@+id/filter_range_value_gross_interest" />

                <TextView
                    android:id="@+id/filter_date_until"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/until"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/filters_ending_date_value"
                    app:layout_constraintStart_toStartOf="@+id/filters_interest_liquid3" />

                <TextView
                    android:id="@+id/filters_interest_liquid5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="@string/fgc"
                    android:textColor="@color/moccasin"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/filters_ending_date_value"
                    app:layout_constraintStart_toEndOf="@+id/filters_ending_date_value"
                    app:layout_constraintTop_toTopOf="@+id/filters_ending_date_value" />

                <TextView
                    android:id="@+id/filters_emitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/emitter"
                    android:textColor="@color/moccasin"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/filters_publisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/publisher"
                    android:textColor="@color/moccasin"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/filters_emitter"
                    app:layout_constraintTop_toBottomOf="@+id/filters_emitter_value" />

                <TextView
                    android:id="@+id/filters_interest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/interest_yearly"
                    android:textColor="@color/moccasin"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/filters_publisher"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                <TextView
                    android:id="@+id/filters_interest_gross"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/gross"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/filters_interest"
                    app:layout_constraintTop_toBottomOf="@+id/filters_interest" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/filters_cancel_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/error"
                    android:onClick="@{() -> navController.popBackStack()}"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/guideline"
                    app:layout_constraintTop_toBottomOf="@+id/filters_ending_date_value"
                    app:layout_constraintVertical_bias="1.0" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="0dp"
                    android:layout_height="739dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintGuide_percent="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/filters_apply_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorSecondary"
                    android:text="@string/apply"
                    android:textAllCaps="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/guideline"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/filters_cancel_button" />

                <org.florescu.android.rangeseekbar.RangeSeekBar
                    android:id="@+id/filter_range_value_gross_interest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    app:activeColor="@color/graphInterest"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/filters_interest_gross"
                    app:showLabels="true" />

                <EditText
                    android:id="@+id/filters_ending_date_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:inputType="date"
                    android:textSize="@dimen/detail_screen_subtitle_value"
                    app:layout_constraintEnd_toStartOf="@+id/guideline"
                    app:layout_constraintRight_toLeftOf="@id/guideline"
                    app:layout_constraintStart_toEndOf="@+id/filter_date_until"
                    app:layout_constraintTop_toBottomOf="@+id/filters_interest_liquid3" />

                <Switch
                    android:id="@+id/filters_fgc_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:shadowColor="@color/graphInterest"
                    android:textSize="@dimen/detail_screen_subtitle_value"
                    app:layout_constraintBottom_toBottomOf="@+id/filters_interest_liquid5"
                    app:layout_constraintStart_toEndOf="@+id/filters_interest_liquid5" />

                <TextView
                    android:id="@+id/filters_income_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/income_type"
                    android:textColor="@color/moccasin"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/filters_publisher"
                    app:layout_constraintTop_toBottomOf="@+id/filters_publisher_value" />

                <Spinner
                    android:id="@+id/filters_emitter_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/filters_emitter" />

                <Spinner
                    android:id="@+id/filters_publisher_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/filters_publisher" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/liquidity"
                    android:textColor="@color/moccasin"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/filters_income_type"
                    app:layout_constraintTop_toBottomOf="@+id/filters_income_type" />

                <Spinner
                    android:id="@+id/filters_income_type_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/filters_income_type"
                    app:layout_constraintEnd_toEndOf="@+id/filters_publisher_value"
                    app:layout_constraintStart_toEndOf="@+id/filters_income_type"
                    app:layout_constraintTop_toTopOf="@+id/filters_income_type" />

                <Spinner
                    android:id="@+id/filters_liquidity_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/textView2"
                    app:layout_constraintEnd_toEndOf="@+id/filters_income_type_value"
                    app:layout_constraintStart_toStartOf="@+id/filters_income_type_value"
                    app:layout_constraintTop_toTopOf="@+id/textView2" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/tax_on_income"
                    android:textColor="@color/moccasin"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/textView2"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <Spinner
                    android:id="@+id/filters_ir_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/textView3"
                    app:layout_constraintEnd_toEndOf="@+id/filters_liquidity_value"
                    app:layout_constraintStart_toStartOf="@+id/filters_liquidity_value"
                    app:layout_constraintTop_toTopOf="@+id/textView3" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>